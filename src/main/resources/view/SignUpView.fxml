<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="box" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="339.0" prefWidth="341.0" spacing="12.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUpController">
   <children>
      <Label fx:id="title" alignment="CENTER" text="Welcome!" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="4.5" />
         </VBox.margin>
      </Label>
      <HBox fx:id="initialUsernameRow" alignment="BASELINE_CENTER" spacing="20.0">
         <children>
            <Label fx:id="initialUsernameLabel" text="Username/Email">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="initialUsername" prefWidth="140.0" />
         </children>
         <VBox.margin>
            <Insets top="4.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="verifiedUsernameRow" alignment="BASELINE_CENTER" spacing="19.0">
         <children>
            <Label fx:id="verifiedUsernameLabel" text="Verify Username" />
            <TextField fx:id="verifiedUsername" prefWidth="140.0" />
         </children>
      </HBox>
      <HBox fx:id="initialPasswordRow" alignment="BASELINE_CENTER" spacing="65.0">
         <children>
            <Label fx:id="initialPasswordLabel" text="Password" />
            <PasswordField fx:id="initialPassword" prefWidth="140.0" />
         </children>
      </HBox>
      <HBox fx:id="verifiedPasswordRow" alignment="BASELINE_CENTER" spacing="23.0">
         <children>
            <Label fx:id="verifiedPasswordLabel" text="Verify Password" />
            <PasswordField fx:id="verifiedPassword" prefWidth="140.0" />
         </children>
         <VBox.margin>
            <Insets bottom="7.75" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
